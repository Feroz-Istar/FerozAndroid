<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/p1"
                android:layout_marginTop="@dimen/p1"
                android:layout_marginEnd="16dp"
                android:text="Heading"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/card_header"
                android:textSize="@dimen/h6"
                app:fontFamily="@font/lato_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="task"
                android:textColor="@color/black_theme_text"
                android:textSize="@dimen/h4"
                app:fontFamily="@font/lato"
                app:layout_constraintEnd_toEndOf="@+id/header"
                app:layout_constraintStart_toStartOf="@+id/header"
                app:layout_constraintTop_toBottomOf="@+id/header" />


           <!-- <android.support.v7.widget.RecyclerView
                android:id="@+id/task_history_recyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h1"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/expand_task_history"
                app:layout_constraintStart_toStartOf="@+id/task_history"
                app:layout_constraintTop_toBottomOf="@+id/task_history" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/last_action_items_recyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h1"
                app:layout_constraintEnd_toStartOf="@+id/expand_last_action_item"
                app:layout_constraintStart_toStartOf="@+id/last_action_item"
                app:layout_constraintTop_toBottomOf="@+id/last_action_item" />
-->

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/start_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/red_btn_shape"
        android:drawableStart="@drawable/ic_call_white_24dp"
        android:drawableLeft="@drawable/ic_call_white_24dp"
        android:drawableTint="@color/white"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Make call"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/p1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".6"
        tools:targetApi="m" />

</android.support.constraint.ConstraintLayout>